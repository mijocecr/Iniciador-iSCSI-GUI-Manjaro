<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ISCSI_Util.ViewModels"
        x:Class="ISCSI_Util.Views.PasswordDialog"
        x:DataType="vm:PasswordDialogViewModel"
        Title="Contraseña requerida"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <StackPanel Margin="15" Spacing="10">
        <TextBlock Text="Introduce la contraseña de administrador:"
                   FontWeight="Bold"/>

        <TextBox PasswordChar="*"
                 Text="{Binding Password, Mode=TwoWay}"
                 Width="250"/>

        <Button Content="Aceptar"
                Command="{Binding AceptarCommand}"
                HorizontalAlignment="Right"
                Width="80"/>
    </StackPanel>
</Window>