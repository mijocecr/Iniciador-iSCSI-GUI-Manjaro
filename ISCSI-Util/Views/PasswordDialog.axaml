<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ISCSI_Util.ViewModels"
        x:Class="ISCSI_Util.Views.PasswordDialog"
        x:DataType="vm:PasswordDialogViewModel"
        Title="ContraseÃ±a requerida"
        Width="300" Height="140"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Window.KeyBindings>
        <KeyBinding Gesture="Enter" Command="{Binding AceptarCommand}" />
        
    </Window.KeyBindings>
    
    <StackPanel Margin="1" Spacing="10" Background="#151d23">
        <Grid RowDefinitions="*, Auto,Auto" ColumnDefinitions="*,*"
              
              >

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="Se requiere autenticar usuario"
                       HorizontalAlignment="Center"
                       Margin="0 10 0 5"
                       FontSize="18"
                       Foreground="White"
                       
                       FontWeight="Bold"/>
            <TextBox Grid.Column="0" Grid.Row="1" PasswordChar="*"
                     
                     
                     
                     HorizontalAlignment="Stretch"
                     Text="{Binding Password, Mode=TwoWay}"
                     Margin="10"
                     FontSize="14"
                     TextAlignment="Center"
                     Grid.ColumnSpan="2"
           
                     
                     
                     />
            
            <Button Grid.Row="2" Grid.Column="0" Content="Aceptar"
                    Command="{Binding AceptarCommand}"
                    Background="Yellow"
                    Foreground="Black"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Grid.ColumnSpan="2"
                    Margin="0 10 0 0"
                    
                    
                   />
            
        </Grid>
        
       

       
    </StackPanel>
</Window>